<div id="add-manufacturer-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title text-center">Add a Manufacturer</h4>
      </div>
      <div class="modal-body clearfix">
        <%= form_for(manufacturer = Manufacturer.new) do |f| %>
        <%= devise_error_messages! %>
        <div class="col-md-6">
          <h3>Add a Manufacturer</h3>
          <h4><%= link_to "Add a Camera", '#add-camera-modal', data: { toggle: "modal", target: "#add-camera-modal", dismiss: "modal" } %></h4>
          <p>
            <%= f.text_field :name, :placeholder => "Manufacturer Name" %>
          </p>
          <p>
          <%= f.text_field :url, :placeholder => "Manufacturer Website" %>
          </p>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
          <div>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">cancel</button>
          </div>
        </div>
        <div class="col-md-6">
          <p>
            <%= f.fields_for :image, manufacturer, :html => {:multipart => true} do |asset| %>
            <%= asset.file_field :file %>
            <% end %>
          </p>
          <div>
            <%= f.submit 'contribute' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
