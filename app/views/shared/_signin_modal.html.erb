<div id="signin-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title text-center">Sign Up or Log In</h4>
      </div>
      <div class="modal-body clearfix">
        <%= devise_error_messages! %>
        <div class="col-md-6">
          <h3>Sign up</h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <p>
            <%= f.email_field :email, :placeholder => 'Email Address' %>
          </p>
          <p>
            <%= f.text_field :username, :placeholder => 'Username' %>
          </p>
          <p>
            <%= f.password_field :password, autocomplete: "off", :placeholder => 'Password' %>
          </p>
          <p>
            <%= f.submit "sign up", class: 'modal-button absolute-right' %>
          </p>
          <% end %>
        </div>
        <div class="col-md-6">
          <h3>Log In</h3>
          <%= form_for :user, :url => session_path(:user) do |f| %>
          <p>
            <%= f.text_field :login, autofocus: true, :placeholder => 'Email or Username' %>
          </p>
          <p>
            <%= f.password_field :password, :placeholder => 'Password' %>
          </p>
          <p>
            <%= link_to "Forgot password?", new_password_path(:user), :class => 'forgot-password' %>
          </p>
          <p>
            <%= f.submit 'log in', class: 'modal-button absolute-left' %>
          </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
