<div class="front-header navbar navbar-top">
  <div class="container">
    <div class="navbar">
      <div class="navbar-inner">
        <a class="navbar-brand" href="http://www.cambase.io/">
          <%= image_tag(asset_url('logo.jpg')) %>
        </a>

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to('Vendors (' + Vendor.all.length.to_s + ')', 'http://www.cambase.io/vendors') %></li>
            <li><%= link_to('Models (' + Model.all.length.to_s + ')', 'http://www.cambase.io/models') %></li>
            <li><%= link_to('Recorders (' + Recorder.all.length.to_s + ')', 'http://www.cambase.io/recorders') %></li>
            <li><%= link_to('API', 'http://api.cambase.io/api-docs') %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle username" data-toggle="dropdown">
                  <%= image_tag(avatar_url(current_user)) %>
                  <%= current_user.username %>
                  <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li><%= link_to('Sign Out', destroy_user_session_path, :method => :delete) %></li>
                </ul>
              </li>
            <% else %>
              <li><%= link_to 'Sign In', "https://dashboard.evercam.io/oauth2/authorize?client_id=3d0e289b&scope=user:view:all&response_type=code&redirect_uri=#{root_url}users/auth", class: 'sign_in' %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>