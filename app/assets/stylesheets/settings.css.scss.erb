.settings{
  h2{
    margin-top: 10px;
    margin-bottom: 20px;
  }
  .settings-wrap{
    background: #fff url() 0 0 no-repeat;
    width: 100%;
    padding: 60px 0;
  }
  .col-sm-9{
    display: block;
    float: none;
    margin: 0 auto;
  }
  h3{
    margin-bottom: 30px;
    color: $mediumgreen;
  }
  label{
    padding: 10px 0;
    margin: 0;
    font-weight: normal;
    font-style: italic;
    color: $mediumgreen;
  }
  input{
    float: right;
    border: none;
    background: $offwhite;
    padding: 10px;
  }
  .avatar{
    float: right;
    margin-right: 0;
    img{
      width: 40px;
      height: 40px;
    }
  }
  input[type=submit]{
    text-transform: lowercase;
    background: $mediumgreen;
    color: #fff;
    font-style: normal;
    float: right;
    border: none;
    padding: 10px 50px;
    margin-top: 40px;
  }
}
