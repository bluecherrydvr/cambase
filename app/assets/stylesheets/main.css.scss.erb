.main{
  padding-top: 20px;
  padding-bottom: 20px;
}

#masonry-container{
  margin: 0 -5px;
}

.tile{
  box-sizing:border-box !important;
  margin-bottom: 10px;
  position: relative;
  .tile-content{
    background: #fff;
    padding: 20px 10px;
    a{
      width: 100%;
      height: 100%;
      display: block;
      text-align: center;
    }
    img{
      width: 100%;
      max-width: 100%;
      max-height: 100%;
      height: auto;
      width: auto;
      display: inline-block;
    }
  }
}

.tile-image{
  .tile-content{
    background-image: asset-url("icons/eye.png");
    background-position: right top;
    background-repeat: no-repeat;
  }
}

.tile-small .tile-content{
  height: 136px;
}

.tile-big{
  a.logo{
    background: #ffffff;
    width: 100%;
    height: 125px;
    display: table;
    text-align: center;
    table-layout: fixed;
    .tile-content{
      display: table-cell;
      vertical-align: middle;
      min-height: 100%;
      min-width: 100%;
      height: auto;
      width: auto;
    }
    img{
      max-width: 125px;
      max-height: 125px;
    }
  }
  span {
    color: #333333;
    background: $lightgreen;
    padding: 5px;
    width: 100%;
    height: 28px;
    display: block;
    text-align: center;
  }
}

/*Put shadow under particular DIV when user hover on that */
.outer .box:hover{
  box-shadow: 3px 3px 15px #777;
}

.outer-box{
  background: #ffffff;
  padding: 15px;
  margin: 0px 5px 15px;
  box-shadow: 0px 0px 5px #aaa;
}