.camera-heading{
  h1{
    font-size: 24px;
    margin-top: 10px;
    margin-bottom: 20px;
  }
  .col-sm-2{
    text-align: right;
    margin-top: 16px;
  }
  a{
    border-radius: 4px;
    border: 1px solid $mediumgreen;
    color: $mediumgreen;
    font-size: 16px;
    font-weight: bold;
    font-family: 'Titillium Web', 'sans-serif';
    padding: 0px 7px;
    margin-top: 20px;
    margin-bottom: 20px;
    text-decoration: none;
    &:hover{
      background-color: $mediumgreen;
      color: #fff;
    }
  }
}

.module{
  background: #fff;
}

.module-header{
  background: $mediumgreen;
  color: #fff;
  text-align: center;
  h4{
    font-size: 14px;
    padding: 8px 0;
    margin: 0;
  }
}

.module-body{
  padding: 10px;
  & > img{
    width: 100%;
    height: auto;
  }
}

.module-images{
  h4{
    background-image: asset-url("icons/edit_dark.png");
    background-repeat: no-repeat;
    background-position: right center;
    cursor: pointer;
  }
  margin-bottom: 10px;
  .module-body{
    padding: 0;
  }
  li{
    a{
      width: 100%;
      height: 100%;
      display: block;
      img{
        width: 100%;
        height: auto;
      }
    }
  }
  form{
    display: none;
  }
  & > a .add-new-image{
    width: 100%;
    height: auto;
  }
  .add-new-image{
    cursor: pointer;
  }
  .thumbnails .add-new-image{
    background-color: $mediumgreen;
  }
}

.module-documents{
  a{
    display: block;
    clear: both;
    line-height: 2.2;
    span{
      float: left;
    }
  }
}

.module-manufacturer{
  .module-body{
    padding: 0;
  }
  img{
    width: 100%;
    height: auto;
  }
}

.module-table{
  .module-body{
    padding: 0;
  }
  .table-striped > tbody > tr:nth-child(2n+1){
    &, > td, > .editable-container{
      background-color: #eeeeee;
    }
  }
  .clickable{
    .editable:hover{
      text-decoration: underline;
      cursor: pointer;
    }
  }
  tr{
    border-top: 1px solid #dddddd;
  }
  td{
    width: 48%;
    border: none;
    word-wrap: break-word;
    max-width: 100px;
    &:focus{
      outline: none;
    }
    &:first-child{
      text-align: right;
    }
    &:last-child{
      cursor: pointer;
      &:hover{
      }
    }
    &.icon-edit{
      border-top: 1px solid #dddddd;
      min-width: 37px;
      width: 4%;
      height: 37px;
      display: table-cell;
      background-image: none;
      background-repeat: no-repeat;
      &:hover{
        background-image: asset-url("icons/edit.png");
      }
    }
    &.editable-empty,
    .editable-empty:hover,
    .editable-empty:focus{
      color: gray;
    }
  }
  .editable-container.editable-inline{
    padding-top: 3px;
    padding-bottom: 3px;
    padding-left: 5px;
    border-top: 1px solid #dddddd;
    width: 100%;
    .editable-buttons{
      padding-top: 3px;
    }
    .editable-submit{
      background-color: $darkgreen;
      border-color: $darkgreen;
    }
  }
  .shapes{
    td, select{
      text-transform: capitalize;
    }
  }
}

#cameras-index,
#cameras-search,
#manufacturers-show{
  .navbar-form{
    .search_model{
      width: 93%;
    }
    .icon-dropdown{
      display: none;
    }
  }
}
